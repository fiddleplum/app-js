{
	"extends": "standard",
	"rules": {
		"brace-style": ["error", "stroustrup"],
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"operator-linebreak": "off",
		"semi": ["error", "always"],
		"space-before-function-paren": ["error", {
			"anonymous": "always",
			"asyncArrow": "always",
			"named": "never"
		}],
		"yoda": "off"
	},
	"env" : {
		"browser": true
	}
}
